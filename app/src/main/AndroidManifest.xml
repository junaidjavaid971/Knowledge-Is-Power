<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.knowledge.power">

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KnowledgeIsPower">
        <activity
            android:name=".views.activities.CategoriesActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.ImageCaptionActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.CreateJoinGroupActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.JoinGroupActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.CreateGroupActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.ViewImageActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.InvitationActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.CommentsActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.DashboardActivity"
            android:exported="true" />
        <activity
            android:name=".views.activities.LoginSignupActivity"
            android:exported="false" />
        <activity
            android:name=".views.activities.MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".views.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />
    </application>

</manifest>